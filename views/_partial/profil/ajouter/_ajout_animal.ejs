  <p><b>Nom de l'animal :</b> <input type="text" name="nom_animal" value=""></p>
  <p><b>Type :</b> <input type="text" name="type" value=""></p>
  <p><b>Date de naissance :</b> <input type="date" name="email" value=""></p>
  <input id="check" type="checkbox" checked onChange="verif();" /><label>Distance maximal</label>
  <div id="range" class="">
    <input type="range" class="notinput" min="0" max="100" value="0" oninput="document.getElementById('AfficheRange').textContent=value" />
