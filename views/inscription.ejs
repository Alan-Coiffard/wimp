<%- include ("_header.ejs"); %>
<div class="block block-centre">
  <a href="/" class="btn btn-retour" type="button">Retour</a>
  <div class="container">
    <h1 class="titre2">Inscription</h1>
    <form class="inscription" action="index.html" method="post">
      <div class="form-block">
        <div class="nonslider">
          <fieldset>
            <legend>Identitée</legend>
            <div>
              <label for="">Identifiant :   </label>
              <input type="text" name="" value="">
            </div>
            <div>
              <label for="">Prénom :   </label>
              <input type="text" name="" value="">
            </div>
            <div>
              <label for="">Nom :      </label>
              <input type="text" name="" value="">
            </div>
          </fieldset>
          <fieldset>
            <legend>Mot de passe</legend>
            <div>
              <label for="">Mot de passe :      </label>
              <input type="text" name="" value="">
            </div>
            <div>
              <label for="">Confirmation :      </label>
              <input type="text" name="" value="">
            </div>
          </fieldset>
          <fieldset>
            <legend>Coordonnées</legend>
            <div>
              <label for="">Clé d'achat :      </label>
              <input type="text" name="" value="">
            </div>
            <div>
              <label for="">Adresse mail :      </label>
              <input type="text" name="" value="">
            </div>
          </fieldset>
        </div>
        <!------------Slider du form-------------------->
        <div class="slider">
          <div class="slideshow-container">
            <!-- Full-width images with number and caption text -->
            <div class="mySlides fade">

              <fieldset>
                <legend class="numbertext">1 / 3</legend>
                <div>
                  <label for="">Identifiant :   </label>
                  <input type="text" name="" value="">
                </div>
                <div>
                  <label for="">Prénom :   </label>
                  <input type="text" name="" value="">
                </div>
                <div>
                  <label for="">Nom :      </label>
                  <input type="text" name="" value="">
                </div>
              </fieldset>
            </div>

            <div class="mySlides fade">
              <fieldset>
                <legend class="numbertext">2 / 3</legend>
                <div>
                  <label for="">Mot de passe :      </label>
                  <input type="text" name="" value="">
                </div>
                <div>
                  <label for="">Confirmation :      </label>
                  <input type="text" name="" value="">
                </div>
              </fieldset>
            </div>

            <div class="mySlides fade">
              <fieldset>
                <legend class="numbertext">3 / 3</legend>
                <div>
                  <label for="">Clé d'achat :      </label>
                  <input type="text" name="" value="">
                </div>
                <div>
                  <label for="">Adresse mail :      </label>
                  <input type="text" name="" value="">
                </div>
              </fieldset>
            </div>
            <script type="text/javascript">
              var slideIndex = 1;
              showSlides(slideIndex);

              // Next/previous controls
              function plusSlides(n) {
                showSlides(slideIndex += n);
              }

              // Thumbnail image controls
              function currentSlide(n) {
                showSlides(slideIndex = n);
              }

              function showSlides(n) {
                var i;
                var slides = document.getElementsByClassName("mySlides");
                var dots = document.getElementsByClassName("dot");
                if (n > slides.length) {slideIndex = 1}
                if (n < 1) {slideIndex = slides.length}
                for (i = 0; i < slides.length; i++) {
                    slides[i].style.display = "none";
                }
                for (i = 0; i < dots.length; i++) {
                    dots[i].className = dots[i].className.replace(" active", "");
                }
                slides[slideIndex-1].style.display = "block";
              }
            </script>
            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
          </div>
          <br>
        </div>
        <!---------------------Fin du Slider-------------------------->
      </div>
      <button type="button" class="btn btn-envoyer" name="button">Envoyer</button>
    </form>
  </div>
</div>

